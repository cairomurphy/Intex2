@*BETA TABLE NOT USED*@

<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        
        
        @foreach (Crash c in Crashes)
        {
            <tr>
                <td>@c.CRASH_ID</td>
                <td>@c.COUNTY_NAME</td>
            </tr>
        }
        
        @*else
        {
            <tr>
                <td colspan="5" class="text-center">No Orders</td>
            </tr>
        }*@
    </tbody>

</table>

@code {

    [Parameter]
    public string TableTitle { get; set; } = "Crashes";

    [Parameter]
    public IEnumerable<Crash> Crashes { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Crash";
}
