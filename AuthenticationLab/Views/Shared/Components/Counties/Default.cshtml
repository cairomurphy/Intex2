@{
}

@model IEnumerable<string>
@* COUNTIES COMPONENT TO BE DROPPED IN *@
<div class="dropdownfilter">
    <button class="dropbtnfilter" style="margin-left: 1rem; margin-top: 1rem; margin-bottom: 1rem;">Filter by County</button>
    <div class="dropdown-contentfilter">
        <a asp-controller="Home" asp-action="Data" asp-route-countyname="" asp-route-pageNum="1" class="btn btn-secondary" style="font-size: medium">Home</a>

        @foreach (string c in Model)
        {
            <a asp-controller="Home" asp-action="Data" asp-route-countyname="@c" asp-route-pageNum="1"
               class="btn @(ViewBag.SelectedCounty == c ? "btn-primary" : "btn-secondary")" style="font-size: medium">@c</a>
        }
    </div>
</div>