@{
}

@model IEnumerable<int>

<div class="dropdown">
    <button class="dropbtn" style="margin-left: 2rem">Filter by Severity</button>
    <div class="dropdown-content">
        <a asp-controller="Home" asp-action="Data" asp-route-severity="" asp-route-pageNum="1" class="btn btn-secondary" style="font-size: medium">Home</a>

        @foreach (int c in Model)
        {
            <a asp-controller="Home" asp-action="Data" asp-route-severity="@c" asp-route-pageNum="1"
               class="btn @(ViewBag.SelectedSeverity == c ? "btn-primary" : "btn-secondary")" style="font-size: medium">@c</a>
        }
    </div>
</div>